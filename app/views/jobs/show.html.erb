      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2> <%= @job.title %> </h2>
    <div style="height:100px;">
      <p>
        <%= @job.description %>
      </p>
    </div>
    <div style="margin-bottom: 20px;"> 薪酬 : <%= @job.wage_lower_bound %>-<%= @job.wage_upper_bound %> </div>
