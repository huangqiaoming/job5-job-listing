
<div class="pull-right" style="padding-bottom: 20px; margin-top:20px;">
  <%= link_to("Add a job", new_admin_job_path, class: "btn btn-primary btn-md") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>职缺</th>
      <th width="220">Job Pic</th>
      <th>收到履历数量</th>
      <th>薪资范围</th>
      <th>管理选项</th>
      <th>刊登时间</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td>
          <%= render_job_status(job) %>
          <%= link_to(job.title, admin_job_path(job))%>
        </td>
        <td>
          <%= link_to job_path(job) do %>
            <% if job.image.present? %>
              <%= image_tag(job.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td>
          <%=  link_to(job.resumes.count, admin_job_resumes_path(job))%>
        </td>
        <td>
          <%= job.wage_lower_bound %> - <%= job.wage_upper_bound %>
        </td>
        <td>
          <%= link_to("Edit", edit_admin_job_path(job), :class => "btn btn-xs btn-info") %>
          <%= link_to("Destroy", admin_job_path(job), :method => :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => "Are you sure?" }) %>
          <% if job.is_hidden %>
          <%= link_to("Publish", publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-success") %>
          <% else %>
          <%= link_to("Hide", hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-warning") %>
          <% end %>
        </td>
        <td>
            <%= job.created_at %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
