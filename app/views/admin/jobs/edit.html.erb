<h1> Edit a job </h1>

<%= simple_form_for [:admin,@job] do |f| %>

  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :wage_lower_bound, :label => "薪资下限" %>
  <%= f.input :wage_upper_bound, :label => "薪资上限" %>
  <%= f.input :contact_email %>
  <%= f.input :is_hidden %>

  <% if @job.image.present? %>
  <%= image_tag(@job.image.thumb.url) %>
  <% else %>
  <%= f.input :image, as: :file %>
  <% end %>

  <%= f.submit "Submit" %>

<% end %>
